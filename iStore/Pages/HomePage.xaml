<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iStore.Pages.HomePage"
             Title="HomePage">
	<VerticalStackLayout BackgroundColor="#FFFFFF">
		<!-- Automated Alerts and Notifications -->
		<Label
            Text="Recent Alerts and Notifications"
            FontSize="Medium"
            FontAttributes="Bold"
            HorizontalOptions="Start"
            Margin="20,10,0,0"/>
		<Label
            Text="No recent alerts. Check back later."
            HorizontalOptions="Start"
            Margin="20,0,0,10"/>

		<!-- Visual Analytics -->
		<Label
            Text="Inventory Insights"
            FontSize="Medium"
            FontAttributes="Bold"
            HorizontalOptions="Start"
            Margin="20,10,0,0"/>
		<!-- Insert code for displaying visual analytics (e.g., charts/graphs) here -->

		<!-- Integration with External Systems -->
		<Label
            Text="External System Integration"
            FontSize="Medium"
            FontAttributes="Bold"
            HorizontalOptions="Start"
            Margin="20,10,0,0"/>
		<Button
            Text="View External Systems"
            Clicked="OnViewExternalSystemsClicked"
            BackgroundColor="#2196F3"
            TextColor="#FFFFFF"
            Margin="20,10,20,10"/>

		<!-- Barcode and RFID Integration -->
		<Label
            Text="Scan Barcode or RFID"
            FontSize="Medium"
            FontAttributes="Bold"
            HorizontalOptions="Start"
            Margin="20,10,0,0"/>
		<Button
            Text="Scan"
            Clicked="OnScanClicked"
            BackgroundColor="#4CAF50"
            TextColor="#FFFFFF"
            Margin="20,10,20,10"/>

		<!-- Multi-location Inventory Management -->
		<Label
            Text="Multi-location Inventory"
            FontSize="Medium"
            FontAttributes="Bold"
            HorizontalOptions="Start"
            Margin="20,10,0,0"/>
		<!-- Insert code for displaying multi-location inventory summary here -->

		<!-- Customizable Dashboards -->
		<Label
            Text="Customizable Dashboards"
            FontSize="Medium"
            FontAttributes="Bold"
            HorizontalOptions="Start"
            Margin="20,10,0,0"/>
		<Button
            Text="Personalize Dashboard"
            Clicked="OnPersonalizeDashboardClicked"
            BackgroundColor="#FFC107"
            TextColor="#000000"
            Margin="20,10,20,10"/>
	</VerticalStackLayout>
</ContentPage>
